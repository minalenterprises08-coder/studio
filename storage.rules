rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check for admin status
    function isAdmin() {
      return exists(/databases/(default)/documents/roles_admin/$(request.auth.uid));
    }

    // Allow read access to everyone for all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Restrict write access (create, update, delete) to admins only
    // This rule applies to all files in the bucket.
    match /{allPaths=**} {
      allow write: if request.auth != null && isAdmin();
    }
  }
}
